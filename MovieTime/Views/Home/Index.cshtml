@model IEnumerable<MovieTime.ViewModels.UserMovieDetailViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<form class="watchlist-upload-form" method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="UploadWatchList">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload your imdb list</p>
            <input type="file" name="watchlistEntry">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload">
        </div>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Director</th>
            <th>Score</th>
            <th>Genre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var movie in Model)
        {
            <tr>
                <td>@movie.MovieTitle</td>
                <td>@movie.Director</td>
                <td>@movie.Rating</td>
                <td>@movie.Genre</td>
                <td><a asp-action="EditUserReview" asp-route-reviewId="@movie.ReviewId">Edit</a></td>
            </tr>
        }
    </tbody>
</table>
