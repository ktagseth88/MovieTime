@model MovieTime.ViewModels.WatchList.UserReviewViewModel

@{
    ViewData["Title"] = "EditUserReview";
}

<h2>Edit</h2>

<hr />
<form asp-action="EditUserReview">
    <div class="row">
        <div class="col-md-10">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="MovieName" class="control-label"></label>
                    <input asp-for="MovieName" class="form-control" readonly="readonly" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-2">
                    <label asp-for="Rating" class="control-label"></label>
                    <span asp-validation-for="Rating"></span><br />
                    <input asp-for="Rating" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label asp-for="ReviewText" class="control-label"></label>
                    <textarea asp-for="ReviewText" class="form-control"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-1">
                    <label asp-for="WouldRewatch" class="control-label"></label>
                    <input asp-for="WouldRewatch" type="checkbox" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <input asp-for="MovieId" class="form-control" type="hidden" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-2">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</form>
<div class="row">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>tinymce.init({ selector: 'textarea' });</script>
}